# VARIABLES

STRING alphabet <-- "abcdefghijklmnopqrstuvwxyz"
ENTIER compteur <-- 0
STRING text <-- TEXTE

# DEBUT DU PROGRAMME

LIRE text

SI |text| > 120
ALORS
    POUR i = 0 à |alphabet|-1
        POUR i = 0 à |text|-1
            SI text[i] = alphabet[i]
            ALORS 
                compteur <-- compteur + 1
            FIN SI
        FIN POUR
        ECRIRE "Il y a " , compteur , " de fois la lettre " , alphabet[i]
        compteur <-- 0
    FIN POUR
FIN SI

# FIN DU PROGRAMME